<?xml version="1.0" encoding="utf-8" ?>
<dataset>
    <focuscolor color="black"></focuscolor>

    <desktop>
        <title>
            <fontsize>31px</fontsize>
            <width>67%</width>
        </title>
        <instruction>
            <fontsize>22px</fontsize>
            <width>67%</width>
        </instruction>
        <terms>
            <fontsize>24px</fontsize>
            <height>150px</height>
            <width>270px</width>
        </terms>
        <definition>
            <fontsize>22px</fontsize>
            <height>150px</height>
            <width>600px</width> <!-- this is maximum width, it will auto adjust as per available spacing-->
        </definition>
        <feedback>
            <fontsize>22px</fontsize>
        </feedback>
        <button>
            <fontsize>22px</fontsize>
            <width>170px</width> <!-- this is minimum width of a button-->
            <height>64px</height> <!-- this is minimum width of a button-->
        </button>
    </desktop>
    <mobile>
        <title>
            <fontsize>18px</fontsize>
        </title>
        <instruction>
            <fontsize>16px</fontsize>
        </instruction>
        <terms>
            <fontsize>16px</fontsize>
            <height>80px</height> <!-- this is minimum height of a term box-->
        </terms>
        <definition>
            <fontsize>16px</fontsize>
            <height>80px</height> <!-- this is minimum height of a definition box-->
        </definition>
        <feedback>
            <fontsize>16px</fontsize>
        </feedback>
        <button>
            <fontsize>16px</fontsize>
            <width>170px</width> <!-- this is minimum width of a button-->
            <height>64px</height> <!-- this is minimum width of a button-->
        </button>
    </mobile>

    <themes>
        <theme>
            <name>default-theme</name>
            <title>Default</title>
            <color1>#001a36</color1>
            <color2>#4a4545</color2>
            <color3>#C7EBF2</color3>
        </theme>
        <theme>
            <name>scheme1-theme</name>
            <title>Scheme 1</title>
            <color1>#001783</color1>
            <color2>#4a4545</color2>
            <color3>#6C9BFF</color3>
        </theme>
        <theme>
            <name>scheme2-theme</name>
            <title>Scheme 2</title>
            <color1>#001C5D</color1>
            <color2>#4a4545</color2>
            <color3>#7FA8FC</color3>
        </theme>        
        <theme>
            <name>scheme3-theme</name>
            <title>Scheme 3</title>
            <color1>#43596F</color1>
            <color2>#4a4545</color2>
            <color3>#79E6FF</color3>
        </theme>
    </themes>
</dataset>
